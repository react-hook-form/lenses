{
  "extends": "./src/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@hookform/lenses": ["./src"],
      "@hookform/lenses/rhf": ["./src/rhf"]
    },
    "types": ["vitest/globals"],
    "declaration": false,
    "declarationMap": false,
    "isolatedModules": false,
    "isolatedDeclarations": false
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
